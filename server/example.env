# Server Configuration
PORT=4000

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/document_app

# Frontend Configuration
FRONTEND_HOST=http://localhost:3000

# Password Configuration
SALT=12

# Email Configuration (for user verification)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# JWT Configuration
JWT_ACCESS_TOKEN_SECRECT_KEY=your-super-secret-access-key-here
JWT_REFRESH_TOKEN_SECRECT_KEY=your-super-secret-refresh-key-here

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
MAX_FILES=20

# Trust Deed Specific Configuration
TRUST_DEED_UPLOAD_DIR=uploads/trustdeed

# Property Sale Certificate Specific Configuration
PROPERTY_SALE_CERTIFICATE_UPLOAD_DIR=uploads/property-sale-certificates

# Development/Production Environment
NODE_ENV=development